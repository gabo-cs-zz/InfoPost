<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", cols: "30", rows: "7" %>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.collection_select :category, full_categories, :last, :first, { prompt: 'Select Category' }, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.submit 'Save',class: "btn btn-primary" %>
    <%= link_to "Back", :back, class: 'btn btn-secondary' %>
  </div>
<% end %>