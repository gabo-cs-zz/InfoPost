<!-- posts_new_path = /posts/new -->
  <table class="table">
    <thead>
       <tr>
        <th scope="col">ID</th>
        <th scope="col">Post title</th>
        <th scope="col">Datetime (UTC)</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td scope="col"><%= post.id %></td>
        <td scope="col"><%= post.title %></td>
        <td scope="col"><%= post.created_at.strftime('%Y/%m/%d') +' - '+ post.created_at.strftime("%I:%m %p") %></td>
        <td scope="row">
          <%= link_to 'Show', post, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %>
          <%= link_to 'Delete', delete_post_path(post), method: :delete, data: { confirm: 'ARE YOU SURE?' }, class: 'btn btn-danger'%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>



  
